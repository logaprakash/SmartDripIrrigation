<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_delete_rover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alpha.smartdripirrigation.deleteRover">

    <Button
        android:text="@string/clear_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btnBackground"
        android:textColor="@color/btnTextColor"
        android:id="@+id/clearAllBtn"
        android:layout_below="@+id/deleteRoverBtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/deleteRover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btnBackground"
        android:textColor="@color/btnTextColor"
        android:layout_marginTop="20dp"
        android:id="@+id/deleteRoverBtn"
        android:layout_below="@+id/deleteIP"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/deleteIP"
        android:hint="@string/ipAddress"
        android:layout_marginTop="133dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
